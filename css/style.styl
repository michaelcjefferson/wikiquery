// VARIABLES
//----------------------------------------------------
$black = #011627
$white = #EFFFE9
$blue = #2EC4B6
$red = #E71D36

// MAIN
//----------------------------------------------------
*
  font-family: 'Raleway', sans-serif
  font-size: 1.2rem

.background
  z-index: 5
  position: fixed
  height: 100vh
  width: 100vw
  background: url('https://www.hackread.com/wp-content/uploads/2013/08/traitor_-edit-on-snowden_s-wikipedia-page-linked-to-senate-ip-address.si_.jpg')
  background-size: cover
  filter: blur(5px) grayscale(80%) brightness(.5)
  // z-index: -50

.container
  display: flex
  justify-content: center
  align-items: center
  flex-direction: column
  height: 100vh
  transition: all 0.5s ease-in-out
  
.container-search
  justify-content: space-between
  
.search-box
  z-index: 10
  height: 60px
  width: 320px
  border: 1px solid $white
  border-bottom: none
  border-radius: 3px 3px 0 0
  background: $blue
    
.search-input
  border: none
  background: none
  height: 100%
  width: 250px
  margin-left: 10px
  color: $white
  &:focus
    outline: none
  
.fa-search
  float: right
  height: 100%
  font-size: 30px
  padding: 15px
  color: $white
  
.random-button
  z-index: 10
  display: flex
  align-items: center
  justify-content: center
  height: 60px
  width: 320px
  border: 1px solid $white
  background: $red
  cursor: default
  color: $white
  font-weight: 500
  border-radius: 0 0 3px 3px
  cursor: pointer
  font-family: sans-serif
  font-size: 1rem
  
.prediction-list
  z-index: 10
  height: 100%
  width: 320px
  display: flex
  flex-direction: column
  justify-content: space-around
  align-items: center
  padding-top: 5px
  padding-bottom: 5px
  
.prediction  
  width: 280px
  min-height: 10%
  color: $white
  background: $black
  border: 1px solid $white
  border-radius: 3px
  cursor: pointer
  overflow: hidden